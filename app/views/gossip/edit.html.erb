<h1> Edite ton potin cousin </h1>

<%= form_for @gossip do |f| %>
    <div class="form-group">
    <label> Titre du Gossip </label>
    <%= f.text_field :title, class: "form-control"%>
    </div>
    
    
    <div class="form-group">
    <label> contenu du Gossip </label>
    <%= f.text_area :content, class: "form-control" %>
    </div>


    <div class="form-group">
      <button type="submit">Modifier le gossip</button>
    </div>

    
<% end %>